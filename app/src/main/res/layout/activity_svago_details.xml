<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/colorWhite"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SvagoPackage.TripPackage.SvagoDetailsActivity">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_left_arrow"
            android:layout_marginStart="5dp"
            android:padding="10dp"
            android:id="@+id/back"
            android:tint="@color/colorPrimary"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text=""
            android:id="@+id/toolbarTitle"
            />

    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:layout_below="@+id/toolbar"
        android:elevation="25dp"
        app:cardMaxElevation="25dp"
        app:cardElevation="25dp"
        app:contentPaddingTop="20dp"
        app:contentPaddingRight="20dp"
        app:contentPaddingLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="50dp">

        <ScrollView
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:id="@+id/txtTitle"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:text="Mercedes Benz"
                    />

                <android.support.v7.widget.CardView
                    android:layout_width="114dp"
                    android:layout_height="114dp"
                    app:cardElevation="7dp"
                    app:cardCornerRadius="57dp"
                    android:layout_below="@id/txtTitle"
                    android:id="@+id/cart"
                    android:layout_centerHorizontal="true"
                    >

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/photo_Img"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/_ic_try_car"/>

                </android.support.v7.widget.CardView>



                <RelativeLayout
                    android:id="@+id/rel"
                    android:layout_below="@+id/cart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="25dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/from"
                            android:layout_gravity="center_horizontal"
                            />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="@color/colorBlack"
                            android:textSize="16sp"
                            android:layout_marginTop="5dp"
                            android:text="25 Jun"
                            android:id="@+id/date1"
                            />

                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/duration"
                        android:layout_centerInParent="true"
                        android:text="5 days"
                        />


                    <LinearLayout
                        android:layout_marginEnd="25dp"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/to"
                            android:layout_gravity="center_horizontal"
                            />


                        <TextView
                            android:id="@+id/date2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="@color/colorBlack"
                            android:textSize="16sp"
                            android:layout_marginTop="5dp"
                            android:text="25 Jun"

                            />

                    </LinearLayout>


                </RelativeLayout>


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="15dp"
                    android:layout_below="@id/rel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/txtModel"
                        android:layout_marginBottom="5dp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14.7sp"
                        android:textColor="#172434"
                        android:letterSpacing="-0.02"
                        android:lineSpacingExtra="3.3sp"
                        android:gravity="center_horizontal"
                        android:text="Trip descripton"
                        />





                    <TextView
                        android:id="@+id/txtDesc"
                        android:layout_marginBottom="5dp"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13.3sp"
                        android:textColor="#313841"
                        android:letterSpacing="-0.02"
                        android:lineSpacingExtra="-1.3sp"
                        android:gravity="center_horizontal"
                        android:text="HBE"
                        />


                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageRec"
                        />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <Button
                            android:id="@+id/btnProcess"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:paddingEnd="30dp"
                            android:paddingStart="30dp"
                            android:background="@drawable/shape_btn_book"
                            android:elevation="25dp"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="12sp"
                            android:text="@string/Proceed_Book"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp" />
                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>
        </ScrollView>

    </android.support.v7.widget.CardView>

</RelativeLayout>