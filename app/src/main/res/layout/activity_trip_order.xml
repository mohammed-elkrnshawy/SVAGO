<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:fillViewport="true"
    android:background="@color/colorWhite"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SvagoPackage.TripPackage.TripOrderActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:orientation="vertical"
            android:gravity="center|top"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textAlignment="center"
                android:id="@+id/txtNameTrip"
                android:layout_marginTop="20.7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#313841"
                android:textStyle="bold"
                android:letterSpacing="-0.02"
                android:lineSpacingExtra="2.7sp"
                android:padding="5dp"
                android:text="Mercedes Benz E Class"
                />

            <ImageView
                android:id="@+id/photo_Img"
                android:layout_below="@id/txtNameCar"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:src="@drawable/_ic_try_car"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <TextView
                    android:lines="1"
                    android:layout_weight="1"
                    android:inputType="text"
                    android:padding="10dp"
                    android:layout_marginEnd="8dp"
                    android:hint="@string/number_of_tickets"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

                <EditText
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp"
                    android:text="1"
                    android:id="@+id/edtNumber"
                    android:padding="10dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/shape_gray"
                    android:layout_width="100dp"
                    android:layout_height="40dp" />


            </LinearLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.CardView
                    android:layout_margin="20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/cartOrder"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="50dp"
                    app:cardElevation="10dp"
                    app:cardBackgroundColor="@color/colorPink1"
                    app:cardCornerRadius="25dp"
                    >

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_tick"
                        android:tint="@color/colorWhite"
                        />

                </android.support.v7.widget.CardView>

            </RelativeLayout>






        </LinearLayout>

    </RelativeLayout>

</ScrollView>