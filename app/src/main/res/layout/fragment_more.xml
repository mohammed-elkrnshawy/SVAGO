<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".SidePackage.MorePackage.MoreFragment">

    <ImageView
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_logo"/>

    <TextView
        android:id="@+id/txtProfile"
        android:padding="10dp"
        android:textSize="16sp"
        android:textColor="@color/colorBlack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/my_profile"
        android:gravity="center_vertical"
        android:drawablePadding="25dp"
        android:drawableEnd="@drawable/ic_arrow_right"
        android:drawableTint="@color/ColorGray"
        android:drawableStart="@drawable/ic_person"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="8dp"
        android:background="@color/ColorGray"
        />

    <TextView
        android:id="@+id/txtContact"
        android:padding="10dp"
        android:textSize="16sp"
        android:textColor="@color/colorBlack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/contact_us"
        android:gravity="center_vertical"
        android:drawablePadding="25dp"
        android:drawableEnd="@drawable/ic_arrow_right"
        android:drawableTint="@color/ColorGray"
        android:drawableStart="@drawable/ic_contact"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="8dp"
        android:background="@color/ColorGray"
        />

    <TextView
        android:id="@+id/txtLanguage"
        android:padding="10dp"
        android:textSize="16sp"
        android:textColor="@color/colorBlack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/language"
        android:gravity="center_vertical"
        android:drawablePadding="25dp"
        android:drawableEnd="@drawable/ic_arrow_right"
        android:drawableTint="@color/ColorGray"
        android:drawableStart="@drawable/ic_language"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="8dp"
        android:background="@color/ColorGray"
        />

    <TextView
        android:id="@+id/txtAbout"
        android:padding="10dp"
        android:textSize="16sp"
        android:textColor="@color/colorBlack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/about"
        android:gravity="center_vertical"
        android:drawablePadding="25dp"
        android:drawableEnd="@drawable/ic_arrow_right"
        android:drawableTint="@color/ColorGray"
        android:drawableStart="@drawable/ic_about"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="8dp"
        android:background="@color/ColorGray"
        />

    <TextView
        android:id="@+id/txtTerms"
        android:padding="10dp"
        android:textSize="16sp"
        android:textColor="@color/colorBlack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/terms_and_conditions"
        android:gravity="center_vertical"
        android:drawablePadding="25dp"
        android:drawableEnd="@drawable/ic_arrow_right"
        android:drawableTint="@color/ColorGray"
        android:drawableStart="@drawable/ic_terms"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="8dp"
        android:background="@color/ColorGray"
        />

    <TextView
        android:id="@+id/txtCurrency"
        android:padding="10dp"
        android:textSize="16sp"
        android:textColor="@color/colorBlack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/currencies"
        android:gravity="center_vertical"
        android:drawablePadding="25dp"
        android:drawableEnd="@drawable/ic_arrow_right"
        android:drawableTint="@color/ColorGray"
        android:drawableStart="@drawable/ic_money"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="8dp"
        android:background="@color/ColorGray"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <TextView
        android:id="@+id/txtVersion"
        android:padding="10dp"
        android:textSize="16sp"
        android:textColor="@color/colorBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/version"
        android:gravity="center_vertical"
        android:drawablePadding="25dp"
        android:drawableTint="@color/ColorGray"
        android:drawableStart="@drawable/ic_smartphone"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="35dp"
            android:layout_centerVertical="true"
            android:text="1"
            android:layout_alignParentEnd="true"
            android:textSize="16sp"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="8dp"
        android:background="@color/ColorGray"
        />

    <TextView
        android:id="@+id/txtLogout"
        android:padding="10dp"
        android:textSize="16sp"
        android:textColor="@color/colorRed1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/logout"
        android:gravity="center_vertical"
        android:drawablePadding="25dp"
        android:drawableTint="@color/colorRed1"
        android:drawableStart="@drawable/ic_exit"
        />

</LinearLayout>