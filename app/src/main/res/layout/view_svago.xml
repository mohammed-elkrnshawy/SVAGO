<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:layout_margin="10dp"
    app:cardElevation="10dp"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearCar"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="120dp">


            <RelativeLayout
                android:layout_weight=".5"
                android:id="@+id/rel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <LinearLayout
                    android:gravity="center"
                    android:id="@+id/lin"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:tint="@color/colorPrimary"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_user"/>

                    <TextView
                        android:layout_marginStart="3dp"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/ColorPink"
                        android:id="@+id/txtPassenger"
                        android:text="4"
                        />

                    <ImageView
                        android:layout_marginStart="10dp"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_door"/>

                    <TextView
                        android:layout_marginStart="3dp"
                        android:id="@+id/txtDoor"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/ColorPink"
                        android:text="4"
                        android:textSize="12sp"
                        />

                    <ImageView
                        android:layout_marginStart="10dp"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_gear_shift"/>

                    <TextView
                        android:id="@+id/txtGear"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:textColor="@color/ColorPink"
                        android:text="4"
                        android:textSize="12sp"
                        />

                    <ImageView
                        android:layout_marginStart="10dp"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_ice_crystal"/>

                    <TextView
                        android:id="@+id/txtAir"
                        android:layout_marginStart="3dp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/ColorPink"
                        android:text="Yes"
                        android:textSize="12sp"
                        />

                </LinearLayout>


                <ImageView
                    android:id="@+id/imgCar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/lin"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="8dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_logo" />

            </RelativeLayout>


            <RelativeLayout
                android:gravity="center"
                android:layout_weight=".5"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:textAlignment="center"
                    android:id="@+id/txtNameCar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Home Home Home"

                    android:textColor="@color/colorPink2"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    />

                <RelativeLayout
                    android:layout_centerHorizontal="true"
                    android:id="@+id/reel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtNameCar"
                    android:layout_marginTop="10dp"
                    >

                    <ImageView
                        android:id="@+id/pin"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_placeholder"
                        />

                    <TextView
                        android:id="@+id/txtLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/pin"
                        android:layout_marginStart="5dp"
                        android:textSize="12sp"
                        android:layout_centerVertical="true"
                        android:text="Borg El Alarb Airport"
                        />

                </RelativeLayout>

                <android.support.v7.widget.CardView
                    android:layout_marginStart="50dp"
                    android:layout_marginEnd="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_below="@+id/reel"
                    app:cardCornerRadius="15dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    app:cardBackgroundColor="@color/ColorPink"
                    app:cardElevation="10dp"
                    >

                    <TextView
                        android:id="@+id/txtPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/colorWhite"
                        android:text="1400 $"
                        android:textSize="14sp"
                        />


                </android.support.v7.widget.CardView>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearTrip"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="120dp">


            <RelativeLayout
                android:layout_weight=".75"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >



                <ImageView
                    android:id="@+id/imgTrip"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_logo"
                    />

            </RelativeLayout>


            <RelativeLayout
                android:gravity="center"
                android:layout_weight=".5"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:textAlignment="center"
                    android:id="@+id/txtNameTrip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Home Home Home"
                    android:textColor="@color/colorPink2"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    />

                <RelativeLayout
                    android:layout_centerHorizontal="true"
                    android:id="@+id/reel2"
                    android:layout_below="@+id/txtNameTrip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    >

                    <ImageView
                        android:id="@+id/pin2"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_placeholder"
                        />

                    <TextView
                        android:id="@+id/txtTripLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/pin2"
                        android:layout_marginStart="5dp"
                        android:textSize="12sp"
                        android:layout_centerVertical="true"
                        android:text="Borg El Alarb Airport"
                        />

                </RelativeLayout>

                <android.support.v7.widget.CardView
                    android:layout_marginStart="50dp"
                    android:layout_marginEnd="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_below="@+id/reel2"
                    app:cardCornerRadius="15dp"
                    android:layout_marginTop="8dp"
                    app:cardBackgroundColor="@color/ColorPink"
                    app:cardElevation="10dp"
                    >

                    <TextView
                        android:id="@+id/txtTripPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/colorWhite"
                        android:text="1400 $"
                        android:textSize="14sp"
                        />


                </android.support.v7.widget.CardView>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>