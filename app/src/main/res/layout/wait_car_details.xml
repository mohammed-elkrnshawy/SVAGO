<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/colorWhite"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SvagoPackage.CarPackage.CarDetailsActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"/>

    <android.support.v7.widget.CardView
        android:elevation="25dp"
        app:cardMaxElevation="25dp"
        app:cardElevation="25dp"
        app:contentPadding="20dp"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="50dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:background="@color/ColorGray"
                android:textAlignment="center"
                android:id="@+id/txtNameCar"
                android:layout_marginTop="20.7dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="12sp"
                android:textColor="#313841"
                android:textStyle="bold"
                android:letterSpacing="-0.02"
                android:lineSpacingExtra="2.7sp"
                android:padding="5dp"
                android:text="Mercedes Benz E Class"
                />

            <View
                android:background="@color/ColorGray"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:id="@+id/photo_Img"
                android:layout_below="@id/txtNameCar"
                android:layout_width="match_parent"
                android:layout_height="100dp" />

            <View
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:id="@+id/line"
                android:layout_marginTop="5dp"
                android:layout_below="@id/photo_Img"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@color/ColorGray"
                android:orientation="horizontal">
            </View>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:layout_below="@id/line"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@color/ColorGray"/>



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <View
                        android:id="@+id/btnProcess"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:paddingEnd="30dp"
                        android:paddingStart="30dp"
                        android:background="@drawable/shape_btn_book"
                        android:elevation="25dp"
                        android:text="@string/Proceed_Book"
                        android:layout_width="170dp"
                        android:layout_height="35dp" />
                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>